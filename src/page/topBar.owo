<template lang="pug">
.top-bar 12:10
  
</template>

<script>
  module.exports = {
    created: function () {
      var myDate = new Date();
      let mini = myDate.getMinutes()
      if (mini < 10) mini = '0' + mini
      this.$el.innerText = `${myDate.getHours() + 1}:${mini}`
    }
  }
</script>


